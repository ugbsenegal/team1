<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_poulet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_repas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/poulet" />

    <TextView
        android:id="@+id/nom_plat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_poulet"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Poulet"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:theme="@style/AppTheme"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/nom_resto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:fontFamily="cursive"
        android:text="Khayrati"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="?android:attr/colorAccent"
        android:textSize="33sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/type_repas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nom_resto"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="cursive"
        android:text="Dejeuner"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/type_repas"
        android:layout_marginEnd="17dp"
        android:fontFamily="cursive"
        android:text="2500F"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="cursive"
        android:text="Commander"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc_plat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_below="@+id/nom_plat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Description du @android:string/paste_as_plain_text"
        android:textAlignment="center" />
</RelativeLayout>