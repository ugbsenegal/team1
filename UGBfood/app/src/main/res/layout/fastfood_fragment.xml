<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/price"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price1"
            android:textColor="@color/white"
            android:background="@drawable/rondbackgroundmauvefonce"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/pizza"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_fastfood"
            android:textColor="@color/DarkMeuve"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCommand3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commander"
            android:textColor="#fff"
            android:padding="10dp"
            android:shadowColor="@color/DarkMeuve"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonround"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>